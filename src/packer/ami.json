{
    "variables": {
        "AWS_ACCESS_KEY": "",
        "AWS_SECRET_KEY": "",
        "aws_region": "us-east-1",
        "subnet_id": "subnet-0a1c4f70e57e69a41",
        "source_ami": "ami-08c40ec9ead489470",
        "ssh_username": "ubuntu"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "dev",
            "access_key": "{{user `AWS_ACCESS_KEY`}}",
            "secret_key": "{{user `AWS_SECRET_KEY`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "My-Ubuntu-Pro-22.04 for csye6225",
            "ami_users": [
                "703825373370"
            ],
            "ami_block_device_mappings": [
                {
                    "delete_on_termination": true,
                    "device_name": "/dev/xvda",
                    "volume_size": 50,
                    "volume_type": "gp2"
                }
            ],
            "tags": {
                "Tool": "Packer",
                "Author": "user",
                "Environment": "dev"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "FOO=foo"
            ],
            "script": "provisioners.sh"
        },
        {
            "type": "file",
            "source": "../",
            "destination": "/home/ubuntu/node-app"
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/node-app",
                "sudo npm install",
                "sudo pm2 start index.js",
                "sudo pm2 startup systemd",
                "sudo pm2 save",
                "sudo ln -s /home/ubuntu/node-app/webapp.service /etc/systemd/system/webapp.service",
                "sudo systemctl daemon-reload",
                "sudo systemctl enable webapp.service",
                "sudo systemctl start webapp.service"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt update",
                "sleep 10",
                "sudo apt-get install mysql-server",
                "sleep 20",
                "sudo systemctl is-active mysql",
                "sudo mysql",
                "ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY 'Akash@123';",
                "FLUSH PRIVILEGES;",
                "mysql -u root -p Akash@123 -e \"CREATE DATABASE IF NOT EXISTS usersDB;\"",
                "sleep 10"
            ]
        }
    ]
}